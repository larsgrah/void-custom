# Template file for 'lrc_tty'
pkgname=lrc_tty
version=0.4.2
revision=1
hostmakedepends="zig pkg-config dbus-devel"
nostrip=yes
short_desc="Terminal lyric viewer for MPRIS players"
maintainer="larsgrah <void@lars.earth>"
license="GPL-3.0-only"
homepage="https://github.com/larsgrah/lrc_tty"
distfiles="https://github.com/larsgrah/lrc_tty/archive/refs/tags/v${version}.tar.gz"
checksum=34ebf8771355083e54ed4ce151c890cf9740f95bbcd674cf2e8ee75a2143bde6
wrksrc="${pkgname}-${version}"

do_build() {
	zig build -Doptimize=ReleaseSafe
}

do_install() {
	vbin zig-out/bin/lrc_tty
}

